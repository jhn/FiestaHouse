    //
       /Highlights Wrapper 
    //
       Footer Wrapper 
    #footer-wrapper.wrapper
      .title 
          font#cleanUp(size='5') Clean-up
      .container
        .row
          .12u
            p
                center 
                    font(size='50') Cleaning Service?  
                    
         .row
          .4u
        ul.actions.actions-centered
          a.button.button-style1.button-big(href='#') Yes 
          white-space:pre         
          a.button.button-style2.button-big(href='#') No
