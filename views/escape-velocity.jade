doctype html
html
head
    title FiestaHouse
    meta(http-equiv='content-type', content='text/html; charset=utf-8')
    meta(name='description', content='')
    meta(name='keywords', content='')
    link(href='http://fonts.googleapis.com/css?family=Source+Sans+Pro:400,400italic,700,900', rel='stylesheet')
    //if lte IE 8
      script(src='js/html5shiv.js')
      link(rel='stylesheet', href='css/ie8.css')
    script(src='js/jquery.min.js')
    script(src='js/jquery.dropotron.min.js')
    script(src='js/config.js')
    script(src='js/skel.min.js')
    script(src='js/skel-panels.min.js')
    script(src='js/main.js')
    noscript
      link(rel='stylesheet', href='css/skel-noscript.css')
      link(rel='stylesheet', href='css/style.css')
      link(rel='stylesheet', href='css/style-desktop.css')
  body.homepage
    //
       Header Wrapper
    #header-wrapper.wrapper
      .container
        .row
          .12u
            //
               Header 
            #header
              //
                 Logo 
              #logo
                h1
                 p 
                     font(size='1000') Fiesta House
                span.byline 
                    font(size='5')  Get your party on
              //
                 /Logo
              //
                 Nav
              nav#nav
                ul
                  li
                    a(href='#details') Details
                  li
                    a(href='#food') Food
                  li
                    a(href='#booze') Booze
                  li
                    a(href='#cleanUp') Clean Up
              //
                 /Nav 
            //
               /Header 
    //
       /Header Wrapper 
    //
       Intro Wrapper 
    #intro-wrapper.wrapper.wrapper-style1
      .title 
          font#details(size='5') Details
      .container
        .row
          .12u
            //
               Intro 
            section#intro
             

              form(method='POST')
                input(type='hidden', name='_csrf', value=_csrf)
                .col-sm-8.col-sm-offset-2
                  if secrets.facebookAuth
                    a#facebookSignIn.btn.btn-block.btn-facebook.btn-social(href='/auth/facebook') 
                    
                      |  Sign in with Facebook 
                 


              section.footer-one
                form#deliveryForm(method='post', action='/planner/details')
                  input(type='hidden', name='_csrf', value=_csrf)
                  div
                    .row.half
                      .6u
                        input#partyName.text(type='text', name='partyName', placeholder='Name of the party')
                      .6u
                        input#partyDate.text(type='text', name='partyDate', placeholder='Date and Time')
                    .row
                      .12u
                        input#contact-address.text(type='text', name='partyAddress', placeholder='Address')

                  ul.actions
                    li
                      button#withDelivery.button.button-style3.button-big Proceed

    //
       Main Wrapper 
    .wrapper.wrapper-style2
      .title 
          font#food(size='5') Food
      .container
        .row
          .12u
            //
               Main 
            #main
                 Features
              section#features.food
                header.style1
                  h2 Select your food
                .feature-list
                  div
                ul.actions.actions-centered
                  li
                    button#foodProceed.button.button-style3.button-big Proceed
              //
                 /Features 
            //
               /Main 
    //
       /Main Wrapper 
    //
       Highlights Wrapper 
